<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >

    <!--<ShipSetMankView android:background="#ccc"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="100dp"-->
        <!--android:paddingLeft="20dp" android:paddingBottom="40dp"-->
        <!--app:exampleDimension="24sp" app:exampleColor="#33b5e5" app:exampleString="Hello, TankView"-->
        <!--app:exampleDrawable="@android:drawable/ic_menu_add" />-->

    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"

        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TankX"

        android:id="@+id/textViewTankName" />

    <EditText
        android:layout_weight="2"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:id="@+id/editTextSounding"
        android:text="4.200"
        android:maxLines="1"
        android:singleLine="true"
        android:digits="0123456789."
        android:maxLength="8"
        android:ems="10"
        android:maxEms="10"




        android:numeric="decimal"
        android:inputType="numberDecimal"
    />

    <EditText
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTemprature"
        android:text="23.5"
        android:maxLines="1"
        android:singleLine="true"

        android:digits="0123456789."
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--->"
        android:id="@+id/buttonCalResult" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.000"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewResult" />

</LinearLayout>
